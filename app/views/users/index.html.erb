<p style="color: green"><%= notice %></p>

<div class="d-flex align-items-center justify-content-between">
  <h1>Users</h1>
  
  <%= button_to "New user", new_user_path, method: :get, class: "btn btn-dark" %>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Username</th>
      <th scope="col">Birthday</th>
      <th scope="col">Email</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each_with_index do |user, index| %>
      <tr>
        <th scope="row"><%= index+1 %></th>
        <td><%= user.user_name %></td>
        <td><%= user.birthday %></td>
        <td><%= user.email %></td>
        <td>
          <%= button_to "Show", user, method: :get, form_class: "d-inline", class: "btn btn-link p-0" %> | 
          <%= button_to "Edit", edit_user_path(user), method: :get, form_class: "d-inline", class: "btn btn-link p-0" %> | 
          <%= button_to "Destroy", user, method: :delete, form_class: "d-inline", class: "btn btn-link p-0" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
